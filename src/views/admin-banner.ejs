      <script src="assets/js/main.js"></script>
      <script>
        let bannerData = [];
        let currentPage = 1;
        const itemsPerPage = 10; // Adjust this number based on how many items you want per page
        let filteredBanner = []; // This will hold the filtered list
        let selectedBannerUrl = ''

        window.onload = function () {
          fetchBannerData();

          // Add event listeners for search and filter
          const searchBar = document.querySelector('.search-bar');

          searchBar.addEventListener('input', applySearchAndFilter);
        };

        async function fetchBannerData() {
          try {
            const apiKey = '<%= apiKey %>';
            const serverUrl = '<%= serverUrl %>';
            const myHeaders = new Headers();
            myHeaders.append('x-api-key', apiKey);

            const requestOptions = {
              method: 'GET',
              headers: myHeaders,
              redirect: 'follow',
            };

            const response = await fetch(`${serverUrl}/api/banner`, requestOptions);
            const result = await response.json();
            if (result?.statusCode === '10000') {
              bannerData = result.data;
              applySearchAndFilter(); // Apply search and filter initially
            } else {
              alert('Fail to fetch data: ' + result.message);
            }
          } catch (err) {
            console.error('Error:', err);
          }
        }

        function applySearchAndFilter() {
          const searchTerm = document
            .querySelector('.search-bar')
            .value.toLowerCase();

          // Filter the banner based on the search term
          filteredBanner = bannerData.filter((banner) => {
            const matchesSearch = banner.title.toLowerCase().includes(searchTerm);

            return matchesSearch;
          });

          // Reset to the first page after filtering
          currentPage = 1;
          renderBannerList();
          renderPagination();
        }

        function renderBannerList() {
          const start = (currentPage - 1) * itemsPerPage;
          const end = start + itemsPerPage;
          const paginatedBanner = filteredBanner.slice(start, end);

          const bannerUI = document.getElementById('banner-list');
          bannerUI.innerHTML = paginatedBanner
            .map((banner, id) => {
              return `<tr class="text-center">
                    <td class="sno"><p>${start + id + 1}</p></td>
                     <td class="profile-picture">
              <img src="${banner.bannerUrl
                }" alt="Banner image" style="width:50px; height:50px;">
            </td>
                    <td class="name"><p>${banner.title}</p></td>
                    <td class="product-remove">
                      <!-- Edit Button -->
                      <button
                        type="button"
                        class="btn btn-primary btn-sm text-white border-gg"
                        data-toggle="modal"
                        data-target="#myModal-edit-box"
                        data-id="${banner._id}"
                        title="Edit"
                      >
                        <span class="icon-edit"></span>
                      </button>
                    
                      <!-- Delete Button -->
                      <button
                        onclick="deleteBanner('${banner._id}')"
                        type="button"
                        class="btn btn-primary btn-sm text-white border-gg"
                        title="Delete"
                      >
                        <span class="icon-delete"></span>
                      </button>
                    </td>
                  </tr>`;
            })
            .join('');
        }

        function renderPagination() {
          const totalPages = Math.ceil(filteredBanner.length / itemsPerPage);
          const paginationUI = document.querySelector('.pagination');

          // Clear existing pagination
          paginationUI.innerHTML = '';

          // Previous button
          paginationUI.innerHTML += `<a href="#" class="prev" onclick="goToPage(${currentPage - 1
            })"><i class="icon-caret-left"></i></a>`;

          // Page numbers
          for (let i = 1; i <= totalPages; i++) {
            paginationUI.innerHTML += `<a href="#" class="${i === currentPage ? 'active' : ''
              }" onclick="goToPage(${i})">${i}</a>`;
          }

          // Next button
          paginationUI.innerHTML += `<a href="#" class="next" onclick="goToPage(${currentPage + 1
            })"><i class="icon-caret-right"></i></a>`;
        }

        function goToPage(page) {
          const totalPages = Math.ceil(filteredBanner.length / itemsPerPage);
          if (page < 1 || page > totalPages) {
            return;
          }
          currentPage = page;
          renderBannerList();
          renderPagination();
        }

        const deleteBanner = async (bannerId) => {
          try {
            const apiKey = '<%= apiKey %>';
            const serverUrl = '<%= serverUrl %>';
            const myHeaders = new Headers();
            myHeaders.append('x-api-key', apiKey);

            const requestOptions = {
              method: 'DELETE',
              headers: myHeaders,
              redirect: 'follow',
            };

            const response = await fetch(
              `${serverUrl}/api/banner/${bannerId}`,
              requestOptions,
            );
            const result = await response.json();
            if (result?.statusCode === '10000') {
              alert(result.message);
              fetchBannerData(); // Reload data after deletion
            } else {
              alert('Fail to delete data: ' + result.message);
            }
          } catch (err) {
            console.error('Error:', err);
          }
        };

        document.addEventListener('click', function (event) {
          if (event.target.closest('.btn[data-target="#myModal-edit-box"]')) {
            // Get the post ID from the button's data-id attribute
            const bannerId = event.target.closest('button').getAttribute('data-id');

            // Find the corresponding post object from the posts array
            const bannerToEdit = bannerData.find((banner) => banner._id === bannerId);
            if (bannerToEdit) {
              // Populate the modal form with the defac details
              document.getElementById('edit-title').value = bannerToEdit.title;
              document.getElementById('edit-banner-photo').src = bannerToEdit.bannerUrl;
              selectedBannerUrl = bannerToEdit.bannerUrl;

              // Store the defac ID in a hidden field for use when saving changes
              document
                .getElementById('banner-edit-form')
                .setAttribute('data-id', bannerId);
            }
          }
        });

        document
          .getElementById('banner-edit-form')
          .addEventListener('submit', async function (event) {
            event.preventDefault();

            const bannerId = this.getAttribute('data-id');
            const formData = new FormData(this);
            formData.append('id', bannerId)

            try {
              const apiKey = '<%= apiKey %>';
              const serverUrl = '<%= serverUrl %>';
              const myHeaders = new Headers();
              myHeaders.append('x-api-key', apiKey);

              const requestOptions = {
                method: 'PATCH',
                headers: myHeaders,
                body: formData,
                redirect: 'follow',
              };

              const response = await fetch(
                `${serverUrl}/api/banner`,
                requestOptions,
              );
              const result = await response.json();

              if (result?.statusCode === '10000') {
                alert(result.message);
                fetchBannerData(); // Reload data after update
                $('#myModal-edit-box').modal('hide'); // Close the modal
              } else {
                alert('Failed to update banner: ' + result.message);
              }
            } catch (err) {
              console.error('Error:', err);
            }
          });

        const addBanner = async () => {
          try {
            const accessToken = window.localStorage.getItem('accessToken');
            const title = document.getElementById('title').value.trim();
            const bannerUrl = document.getElementById('banner-image').files[0];

            const formData = new FormData()
            formData.append('title', title)
            formData.append('bannerUrl', bannerUrl)

            const apiKey = '<%= apiKey %>';
            const serverUrl = '<%= serverUrl %>';

            const myHeaders = new Headers();
            myHeaders.append('x-api-key', apiKey);
            myHeaders.append('Authorization', `Bearer ${accessToken}`);

            const requestOptions = {
              method: 'POST',
              headers: myHeaders,
              body: formData,
              redirect: 'follow',
            };

            const response = await fetch(`${serverUrl}/api/banner`, requestOptions);
            const result = await response.json();
            if (result?.statusCode === '10000') {
              alert(result?.message);
              fetchBannerData();
              $('#myModal-food-item').modal('hide');
              document.getElementById('title').value = '';
              // document.getElementById('banner-image').value = ''
            } else {
              alert('Fail to add banner: ' + result.message);
            }
          } catch (err) {
            console.log(err);
          }
        };


        // display selected banner image
        jQuery('input#banner-image').on('change', function () {
          if (this.files && this.files[0]) {
            let image = this;

            var reader = new FileReader();
            reader.onload = function (e) {
              jQuery('#banner-photo').attr('src', e.target.result); //img tag id
              createCloseButton('#banner-photo', 'input#banner-image');
            };
            reader.readAsDataURL(this.files[0]);
          }
        });

        // display selected banner image
        jQuery('input#edit-banner-image').on('change', function () {
          if (this.files && this.files[0]) {
            let image = this;

            var reader = new FileReader();
            reader.onload = function (e) {
              jQuery('#edit-banner-photo').attr('src', e.target.result); //img tag id
              createCloseButton('#edit-banner-photo', 'input#edit-banner-image');
            };
            reader.readAsDataURL(this.files[0]);
          }
        });


        // function to remove selected image
        function createCloseButton(imageSelector, inputSelector) {
          // Remove existing close button if any

          jQuery(imageSelector).closest('.uploaded-image');
          var defaulImage = jQuery(imageSelector).attr('ref');
          // Create close button
          var closeButton = jQuery('<button class="close-btn">X</button>');

          // Append close button to container
          jQuery(imageSelector).closest('.uploaded-image').append(closeButton);

          // Attach click event to close button
          closeButton.on('click', function () {
            if (defaulImage) {
              jQuery(imageSelector).attr('src', defaulImage);
            }
            jQuery(inputSelector).val('');
            jQuery(this).remove();
            if (imageSelector === '#edit-banner-photo') {
              document.getElementById('edit-banner-photo').src =
                selectedBannerUrl;
            }
          });
        }

      </script>
